@model IEnumerable<TarefaModel>
<div class="container ">
    <div class="d-flex justify-content-between aling-items-center mb-3">
        <h1>Tarefas</h1>
        <a class="btn btn-success mb-1 btn-sm" asp-controller="Tarefa" asp-action="Criar">Nova tarefa</a>
    </div>
<style>
    .data-criacao-cell span {
        color: black; 
    }</style>
<table class="table table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Tarefa</th>
            <th>Descrição</th>
            <th>Data Criação</th>
            <th>Status</th>
        </tr>
    </thead>
    <tbody>
        @if(Model != null)
        {
            @foreach(var Tarefa in Model)
            {
                <tr>
                <td>@Tarefa.Id</td>
                <td>@Tarefa.Nome</td>
                <td>@Tarefa.Descricao</td>
                <td class="data-criacao-cell"><span class="badge badge-success">@Tarefa.DataCriacao</span></td>
                <td>Ativo</td>

                <td>
                    <a asp-controller="Tarefa" asp-action="Editar" asp-route-id="@Tarefa.Id" class="btn btn-warning btn-sm">Editar</a>
                    <a asp-controller="Tarefa" asp-action="Excluir" asp-route-id="@Tarefa.Id" class="btn btn-danger btn-sm">Excluir</a>
                </td>
            </tr>
            }
        }
    </tbody>
</table>
</div>
