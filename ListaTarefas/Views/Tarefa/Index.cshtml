@model IEnumerable<TarefaModel>
<div class="container ">
    <div class="d-flex justify-content-between aling-items-center mb-3">
        <h1>Tarefas</h1>
        
    </div>
    <div>
        <a class="btn btn-info mb-1 btn-sm" asp-controller="Tarefa" asp-action="Exportar"><i class="bi bi-file-earmark-fill"></i> Exportar</a>
        <a class="btn btn-success mb-1 btn-sm" asp-controller="Tarefa" asp-action="Criar"><i class="bi bi-file-earmark-fill"></i> Nova tarefa</a>

    </div>

    @if(TempData["MensagemSucesso"] != null)
    {
        <div class="alert alert-info text-light" role="alert">
            @TempData["MensagemSucesso"]
        </div>
        
    }
    @if (TempData["MensagemEdicao"] != null)
    {
        <div class="alert alert-info text-light" role="alert">
            @TempData["MensagemEdicao"]
        </div>

    }
    @if (TempData["MensagemExclusao"] != null)
    {
        <div class="alert alert-danger text-light" role="alert">
            @TempData["MensagemExclusao"]
        </div>

    }

<style>
    .data-criacao-cell span {
        color: black; 
    }</style>

<table id="Tarefas" class="table table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Tarefa</th>
            <th>Descrição</th>
            <th>Data Criação</th>
            <th>Status</th>
            <th></th>
        </tr>
    </thead>
        <tbody>
            @if (Model != null)
            {
                foreach (var Tarefa in Model)
                {
                    <tr>
                        <td>@Tarefa.Id</td>
                        <td>@Tarefa.Nome</td>
                        <td>@Tarefa.Descricao</td>
                        <td class="data-criacao-cell"><span class="badge badge-success">@Tarefa.DataCriacao</span></td>
                        <td>Ativo</td>
                        <td>
                            <a asp-controller="Tarefa" asp-action="Editar" asp-route-id="@Tarefa.Id" class="btn btn-warning btn-sm"> <i class="bi bi-pencil-square"></i> Editar</a>
                            <a asp-controller="Tarefa" asp-action="Excluir" asp-route-id="@Tarefa.Id" class="btn btn-danger btn-sm"> <i class="bi bi-x-circle-fill"></i> Excluir</a>
                        </td>
                    </tr>
                }
            }
        </tbody>

</table>
</div>
